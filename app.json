{
  "name": "misskey",
  "description": "A federated blogging platform",
  "repository": "https://github.com/syuilo/misskey",
  "logo": "https://github.com/syuilo/misskey/blob/master/assets/apple-touch-icon.png?raw=true",
  "env": {
    "HEROKU": {
      "description": "Leave this as true",
      "value": "true",
      "required": true
    },
    "LOCAL_DOMAIN": {
      "description": "The domain that your misskey instance will run on (this can be https://appname.herokuapp.com or a custom domain)",
      "value": "https://APPNAME.herokuapp.com",
      "required": true
    },
    "DISABLE_HSTS":{
      "description": "Whether disable HSTS",
      "value": "true",
      "required": true
    },
    "CONFIG_ID":{
      "description": "ObjectID is the method used in previous versions of Misskey. * Choose this if you are migrating from a previous Misskey.",
      "value": "aid2",
      "required": true
    },
    "CLUSTER_LIMIT":{
      "description": "Clustering",
      "value": "1",
      "required": true
    },
    "DRIVE_STORAGE":{
      "description": "File storage (Drive) configuration",
      "value": "fs",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ]
}
